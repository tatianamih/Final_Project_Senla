<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="1210" author="Tatiana Mikhalchenko">
    <createTable tableName="discount"
      remarks="A table to contain all discounts">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints nullable="false" unique="true" primaryKey="true"/>
      </column>
      <column name="created" type="timestamp" defaultValueDate="current_timestamp">
        <constraints nullable="false" />
      </column>
      <column defaultValueBoolean="false" name="deleted" type="boolean">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="percent" type="int">
        <constraints nullable="false" unique="false"
                     checkConstraint="CHECK (percent &gt;= 0 AND percent &lt;= 10)"/>
      </column>
      <column name="user_id" type="bigint">
        <constraints foreignKeyName="user_discount_id" references="user_profile(id)"/>
      </column>
    </createTable>

  </changeSet>
</databaseChangeLog>