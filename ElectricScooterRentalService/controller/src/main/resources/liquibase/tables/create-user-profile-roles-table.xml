<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="09" author="Tatiana Mikhalchenko">
    <createTable tableName="user_profile_roles">
      <column name="user_id" type="BIGINT">
      </column>

      <column name="role_id" type="BIGINT">
      </column>
    </createTable>
  </changeSet>

  <changeSet id="20" author="Tatiana Mikhalchenko">
    <addForeignKeyConstraint baseColumnNames="user_id"
                             baseTableName="user_profile_roles"
                             constraintName="fk_user_roles_user"
                             onDelete="CASCADE"
                             onUpdate="RESTRICT"
                             referencedColumnNames="id"
                             referencedTableName="user_profile"/>
  </changeSet>

  <changeSet id="21" author="Tatiana Mikhalchenko">
    <addForeignKeyConstraint baseColumnNames="role_id"
                             baseTableName="user_profile_roles"
                             constraintName="fk_user_roles_roles"
                             onDelete="CASCADE"
                             onUpdate="RESTRICT"
                             referencedColumnNames="id"
                             referencedTableName="roles"/>
  </changeSet>
</databaseChangeLog>